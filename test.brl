fn main(args) {	
	name = readln("What is your name? ");
	age = number(readln("How old are you? "));
	user = new Person(name, age);
	user.greet();
	if (!age) {
		println("Age must be a number, you dork");
		return;
	}
	if (user.age >= 50){
		println("Man, you're old");
	} else if (user.age < 18){
		println("Yeah you're a little too young");
	} else {
		println("Suh dude");
	}
}

class Person {
	fn ~init(self, name, age) {
		self.name = name;
		self.age = age;
	}
	
	fn ~display(self) {
		return "Name: " + self.name + " Age: " + self.age;
	}

	fn greet(self) {
		println("My name is " + self.name + " and I am " + self.age + " years old");
	}
}